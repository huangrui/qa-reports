- f = report_form

.field
  label for="report_meego_version" MeeGo release:
  - Release.names.each do |release_version|
    = radio_button :release, :name, release_version, :class => "version"
    = label :release, :name, release_version, :value => release_version, :class => "inline_label"

.field
  label for="report_test_target" Target profile:
  - @profiles.each do |profile|
    = radio_button :profile, :name, profile, :class => "target"
    = label :profile, :name, profile.humanize, :value => profile, :class => "inline_label"
  = error_message_on :profile, :name

.field
  label for="report_test_execution_date" Test execution date:
  = f.text_field :tested_at, :id =>'report_test_execution_date', :class => 'date'
  = f.error_message_on :tested_at
  = form_ajax_error_msg "tested_at"

.field
  label for="report_test_type" Test set:
  = f.text_field :testset, :id => "report_test_type", :class => "text testset", :tabindex => 3
  small.suggestions
    | e.g. #{render :partial=>'shared/suggestion', :collection => @testsets[0,3], :spacer_template => 'shared/comma'}
  = f.error_message_on :testset
  = form_ajax_error_msg "testset"

.field
  label for="report_test_product" Product:
  = f.text_field :product, :id => "report_test_product", :class => "text product", :tabindex => 5
  small.suggestions
    | e.g. #{render :partial=>'shared/suggestion', :collection => @products[0,3], :spacer_template => 'shared/comma'}
  = f.error_message_on :product
  = form_ajax_error_msg "product"

.field
  label for="report_test_build_id"
