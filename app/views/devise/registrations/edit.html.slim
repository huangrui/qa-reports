.page_content
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|

    h1 User Profile

    = devise_error_messages!

    .field.last
      = f.label :user_name
      span.static_text
        strong= resource.name
    .field.last
      = f.label :email
      = f.text_field :email, :class => "text"
    .field.last
      = f.label :password
      = f.password_field :password, :class => "text short"
      small leave blank if you don't want to change it
    .field.last
      = f.label :password_confirmation
      = f.password_field :password_confirmation, :class => "text short"
    .field.last
      = f.label :current_password
      = f.password_field :current_password, :class => "text short"
      small we need your current password to confirm your changes
    .field.last
      label API token
      span.static_text= resource.token

    #wizard_actions
      = f.submit "Update", :class => "big_btn login"
